<view class="container">
  <view class="login-icon">
    <image class="login-img" src="../../images/login.jpg"></image>
  </view>
  <view class="login-from">
    <!--账号-->
    <view class="inputView">
      <image class="nameImage" src="../../images/user.png"></image>
      <label class="loginLab">账号</label>
      <input class="inputText" placeholder="请输入账号" bindinput="usernameInput" />
    </view>
    <view class="line"></view>

    <!--密码-->
    <view class="inputView">
      <image class="keyImage" src="../../images/psd.png"></image>
      <label class="loginLab">密码</label>
      <input class="inputText" password="true" placeholder="请输入密码" bindinput="passwordInput" />
    </view>
    <view class="line"></view>
    <!--学校-->
    <view class="inputView">
      <picker bindchange="bindUrlPickerChange" value="{{configList[urlIndex].schoolUrl}}" range="{{configList}}" range-key="schoollName">
      <image class="schImage" src="../../images/school.png"></image>
      <label class="loginLab">学校</label>
      <input class="inputText" disabled='disabled' placeholder="请选择学校" value="{{configList[urlIndex].schoollName}}" />
    </picker>
    </view>
    <!--按钮-->
    <view class="loginBtnView">
      <button class="loginBtn" type="primary"  bindtap="login">登录</button>
    </view>
  </view>
</view>